{
    "extends": "../../tsconfig.json", // Inherit settings from the root tsconfig
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact", // Override JSX source for this directory
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "noEmit": true,
        "allowJs": true,
        "checkJs": true,
    },
    "include": [
        "./*"
    ],
}